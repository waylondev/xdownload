{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "xdownload",
  "version": "0.1.0",
  "identifier": "dev.waylon.xdownload",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:2420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "xdownload",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "",
    "category": "DeveloperTool",
    "shortDescription": "Minimalist download tool",
    "longDescription": "A minimalist download tool built with Rust + Tauri"
  }
}
